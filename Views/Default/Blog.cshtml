@model List<blogMVC.Models.yazilar>
@using blogMVC.Controllers

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var tek = true;}
@foreach (var yazi in Model)
{


<section class="page-section">
    <div class="container">
        <div class="product-item">
            <div class="product-item-title d-flex">
                <div class="bg-faded p-5 d-flex @(tek ? "ml-auto" : "mr-auto") rounded">
                    <h2 class="section-heading mb-0">
                        <span class="section-heading-upper">@yazi.baslik</span>
                        <span class="section-heading-lower">@yazi.altBaslik</span>
                    </h2>
                </div>
            </div>
            <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="~/Content/img/@yazi.resim" alt="">
            <div class="product-item-description d-flex @(tek ? "mr-auto" : "ml-auto")">
                <div class="bg-faded p-5 rounded">
                   @Html.Raw(yazi.yazi)
                    @Html.ActionLink("Devamını Oku..","YaziDetay",new {id = yazi.id,baslik = Seo.AdresDuzenle(yazi.baslik) },new {@class = "btn btn-info" })
                </div>
            </div>
        </div>
    </div>
</section>
    tek = !tek;
}

